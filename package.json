{
  "name": "krishimitra-platform",
  "version": "1.0.0",
  "description": "KrishiMitra - Comprehensive Carbon Intelligence Platform",
  "private": true,
  "workspaces": [
    "services/*",
    "mobile/*",
    "desktop/*"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:services && npm run install:mobile",
    "install:services": "npm install --workspace=services/frontend && npm install --workspace=services/backend && npm install --workspace=services/ml-services",
    "install:mobile": "npm install --workspace=mobile/react-native",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:ml\"",
    "dev:frontend": "npm run dev --workspace=services/frontend",
    "dev:backend": "npm run dev --workspace=services/backend", 
    "dev:ml": "python services/ml-services/src/main.py",
    "dev:iot": "cd services/iot-gateway && go run main.go",
    "build": "npm run build:frontend && npm run build:backend && npm run build:ml",
    "build:frontend": "npm run build --workspace=services/frontend",
    "build:backend": "npm run build --workspace=services/backend",
    "build:ml": "cd services/ml-services && python -m pip install -r requirements.txt",
    "test": "npm run test:frontend && npm run test:backend && npm run test:ml",
    "test:frontend": "npm run test --workspace=services/frontend",
    "test:backend": "npm run test --workspace=services/backend",
    "test:ml": "cd services/ml-services && python -m pytest",
    "test:integration": "cd tests/integration && npm test",
    "test:e2e": "cd tests/e2e && npx playwright test",
    "test:load": "cd tests/performance && k6 run load-test.js",
    "lint": "npm run lint:frontend && npm run lint:backend && npm run lint:ml",
    "lint:frontend": "npm run lint --workspace=services/frontend",
    "lint:backend": "npm run lint --workspace=services/backend",
    "lint:ml": "cd services/ml-services && flake8 . && black --check .",
    "db:migrate": "cd services/backend && npx prisma migrate deploy",
    "db:generate": "cd services/backend && npx prisma generate",
    "db:seed": "cd services/backend && npx tsx scripts/seed-data.ts",
    "db:studio": "cd services/backend && npx prisma studio",
    "db:reset": "cd services/backend && npx prisma migrate reset --force",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "k8s:deploy": "kubectl apply -f infrastructure/kubernetes/",
    "k8s:delete": "kubectl delete -f infrastructure/kubernetes/",
    "terraform:plan": "cd infrastructure/terraform && terraform plan",
    "terraform:apply": "cd infrastructure/terraform && terraform apply",
    "terraform:destroy": "cd infrastructure/terraform && terraform destroy",
    "setup:dev": "npm run install:all && npm run db:migrate && npm run db:seed && npm run docker:up",
    "cleanup": "npm run docker:down && docker system prune -f"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@types/node": "^20.14.15",
    "typescript": "^5.5.4",
    "tsx": "^4.17.0"
  },
  "keywords": [
    "agriculture",
    "carbon-credits", 
    "iot",
    "machine-learning",
    "blockchain",
    "sustainability"
  ],
  "author": "KrishiMitra Team",
  "license": "MIT"
}
