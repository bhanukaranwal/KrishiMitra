# KrishiMitra Platform Configuration Template

# Environment
NODE_ENV=production
ENVIRONMENT=production

# Server Configuration
HOST=0.0.0.0
PORT=8000
API_VERSION=v1
BASE_URL=https://krishimitra.com

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/krishimitra
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=krishimitra
DATABASE_USER=krishimitra_user
DATABASE_PASSWORD=your_secure_password

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/krishimitra
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=krishimitra

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Message Queues
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=krishimitra-platform
NATS_URL=nats://localhost:4222
RABBITMQ_URL=amqp://localhost:5672

# External APIs
GOOGLE_EARTH_ENGINE_KEY=your_gee_key
MAPBOX_ACCESS_TOKEN=your_mapbox_token
OPENWEATHER_API_KEY=your_openweather_key
NASA_API_KEY=your_nasa_api_key

# Authentication & Security
JWT_SECRET=your_super_secure_jwt_secret_key_256_bits
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
COOKIE_SECRET=your_secure_cookie_secret

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Payment Gateways
RAZORPAY_KEY_ID=your_razorpay_key
RAZORPAY_KEY_SECRET=your_razorpay_secret
PAYU_MERCHANT_KEY=your_payu_key
PAYU_MERCHANT_SALT=your_payu_salt
STRIPE_PUBLISHABLE_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key

# SMS & Communication
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
WHATSAPP_BUSINESS_TOKEN=your_whatsapp_token
SENDGRID_API_KEY=your_sendgrid_key

# Cloud Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=krishimitra-data
AZURE_STORAGE_ACCOUNT=krishimitrastorage
AZURE_STORAGE_KEY=your_azure_key
GCP_PROJECT_ID=krishimitra-platform
GCP_STORAGE_BUCKET=krishimitra-gcp-bucket

# Blockchain Configuration
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_infura_key
ETHEREUM_PRIVATE_KEY=your_ethereum_private_key
CARBON_CREDIT_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

# Monitoring & Observability
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_newrelic_key
PROMETHEUS_GATEWAY_URL=http://localhost:9091
GRAFANA_URL=http://localhost:3000

# ML/AI Configuration
TENSORFLOW_SERVING_URL=http://localhost:8501
PYTORCH_SERVE_URL=http://localhost:8080
MLFLOW_TRACKING_URI=http://localhost:5000
HUGGING_FACE_TOKEN=your_hf_token

# Government API Integration
AADHAAR_API_KEY=your_aadhaar_api_key
PAN_API_KEY=your_pan_api_key
GST_API_KEY=your_gst_api_key
AGRICULTURE_API_KEY=your_agriculture_api_key

# Rate Limiting
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=900000

# CORS Configuration
CORS_ORIGINS=https://krishimitra.com,https://app.krishimitra.com,http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
ENABLE_BLOCKCHAIN=true
ENABLE_ML_SERVICES=true
ENABLE_IOT_GATEWAY=true
ENABLE_SATELLITE_ANALYSIS=true
ENABLE_CARBON_CREDITS=true
